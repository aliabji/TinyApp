<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <% include ./partials/_header %>
</head>
<body>

  <div class="container">

    <% if (!user_id) { %>
    <h1 class="text-center"; style="padding:50px">Please log in to see links</h1>
    <% } else { %>
      

  <h1 class="text-center"; style="padding:50px 50px 50px 50px">URL List</h1>
  
  <ul class="text-center", style="list-style: none;">
    <% Object.keys(urls).forEach(function(key) { %>
    <li style="padding:0 35px 0 0"><b><%= key %> - <%= urls[key].url %></b> 
    
    <form method="POST" style="padding:0 0 0 0" action="/urls/<%= key %>/delete">
      <label for="/urls/<%= urls %>/delete">Delete URL from list</label>
      <input type="submit" value="Delete"></li>
    </form>

    <form action="/urls/<%= key %>/modify" method="POST" style="padding:8px 0 0 0">
      <label for="long">Modify your URL:</label>
      <input id="long" type="text" name="long" value="http://" placeholder="http://" style="width: 200px">
      <input type="submit" value="Submit">
    </form>
  <% }); %>
  <% } %>
  </ul>
</div>
  <div class="container">
    <h4 class="text-center" style="padding: 10px 0px 0px 0px"><a href="/urls/new">Click here to shorten your link!</a></h4>
  </div>
</body>
</html>
